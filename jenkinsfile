pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

	stages {


		stage('Build') {

			steps {
				sh 'sudo docker build -t cyberpunks77/bitcoin-price:latest .'
			}
		}
        stage('Login') {

			steps {
				sh ' echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}
		stage('Push') {

			steps {
				sh 'sudo docker push cyberpunks77/bitcoin-price:latest'
			}
		}
	}

	post {
		always {
			sh 'sudo docker logout'
		}
	}

}
